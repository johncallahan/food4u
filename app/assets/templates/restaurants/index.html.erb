<h1>Restaurants <small>{{(restaurants|filter:myFilter(currentTag)).length}} of {{restaurants.length}}</small><span ng-show="currentTag != ''"><small> ({{currentTag}} <span ng-click="removeTag()" class="icon-remove"></span>)</small></span></h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>Name</th>
        <th>Rating</th>
        <th>Tags</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="restaurant in restaurants | filter:myFilter(currentTag)">
      <td>
        <a href="/restaurants/{{restaurant.id}}">
          {{restaurant.name}}
        </a>
      </td>
      <td>
        {{restaurant.rating}}
      </td>
      <td>
	{{restaurant.tag_list.join(', ')}}
      </td>
      <td>
        <a href="/restaurants/{{restaurant.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a href='/restaurants/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
